							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/comments/{{comment_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "comments", "{{comment_id}}"]
						}
					},
					"response": []
				}
			]
		},
